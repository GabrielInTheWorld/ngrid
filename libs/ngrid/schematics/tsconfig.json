{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": "./",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "target": "es2015",
    "sourceMap": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "types": [
      "jest",
      "node",
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "./**/*.spec.jest.ts"
  ]
}
